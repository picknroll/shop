doctype html
html(lang='ru')
    head
        meta(charset='UTF-8')
        meta(http-equiv='X-UA-Compatible', content="IE=edge")
        meta(name='viewport' content='width=device-width')
        link(rel="stylesheet" href="bower/normalize-css/normalize.css")
        link(rel="stylesheet" href="css/main.css")
        block title
    body
        .page-wrapper
            header.main-header
                include _common/_header/_header-top
                include _common/_header/_header-bottom
                include _common/_header/_header-nav
            section.page
                block page
        footer.footer
            include _common/_footer/_footer
        script(src="bower/jquery/dist/jquery.js")
        script(src="bower/select2/dist/js/select2.js")
        script(src="bower/jquery-ui/jquery-ui.js")
        script(src="bower/jquery.columnizer/src/jquery.columnizer.js")
        script(src="js/main.js")